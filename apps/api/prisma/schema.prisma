generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  SALES
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  APPOINTMENT_SET
  NEGOTIATING
  SOLD
  LOST
}

model AutoGroup {
  id          String       @id @default(cuid())
  name        String
  dealerships Dealership[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Dealership {
  id          String               @id @default(cuid())
  autoGroupId String
  name        String
  autoGroup   AutoGroup            @relation(fields: [autoGroupId], references: [id])
  leads       Lead[]
  users       UserDealershipRole[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

model User {
  id               String               @id @default(cuid())
  email            String               @unique
  passwordHash     String
  refreshTokenHash String?
  firstName        String
  lastName         String
  dealerships      UserDealershipRole[]
  assignedLeads    Lead[]               @relation("LeadAssignments")
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
}

model UserDealershipRole {
  id           String     @id @default(cuid())
  userId       String
  dealershipId String
  role         Role
  user         User       @relation(fields: [userId], references: [id])
  dealership   Dealership @relation(fields: [dealershipId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([userId, dealershipId])
  @@index([dealershipId])
}

model LeadSource {
  id          String   @id @default(cuid())
  dealershipId String
  name        String
  leads       Lead[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dealershipId])
  @@unique([dealershipId, name])
}

model Lead {
  id                String     @id @default(cuid())
  dealershipId      String
  sourceId          String?
  source            LeadSource? @relation(fields: [sourceId], references: [id])
  status            LeadStatus @default(NEW)
  assignedToUserId  String?
  assignedToUser    User?      @relation("LeadAssignments", fields: [assignedToUserId], references: [id])
  firstName         String?
  lastName          String?
  email             String?
  phone             String?
  vehicleInterest   String?
  lastActivityAt    DateTime?
  dealership        Dealership @relation(fields: [dealershipId], references: [id])
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([dealershipId])
  @@index([dealershipId, status])
  @@index([dealershipId, assignedToUserId])
  @@index([dealershipId, sourceId])
  @@index([dealershipId, lastActivityAt])
}
